{
  "name": "@ten-group/oa3-api-defender",
  "version": "1.0.0",
  "main": "dist/spec-validator.js",
  "bin": "dist/program.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tenproduct/oa3-api-defender.git"
  },
  "publishConfig": {
    "access" : "public"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc -d -p tsconfig.json",
    "api-test":
      "npx nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/program.ts validate --specPath=../test.yaml --url=http://localhost:4040",
    "test": "nodemon --ext ts --exec 'jasmine-ts \"src/**/*.spec.ts\"'",
    "test:ci": "jasmine-ts src/**/*.spec.ts"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "express-openapi-validate": "^0.4.1",
    "js-yaml": "^3.11.0",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jasmine": "^2.8.6",
    "@types/js-yaml": "^3.11.1",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^9.6.2",
    "@types/request": "^2.47.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "mock-fs": "^4.4.2",
    "nodemon": "^1.17.3",
    "semantic-release": "^15.1.7",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}
