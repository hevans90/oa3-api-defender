{
  "name": "ten-platform-mock-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p app/api && tsc -p spec",
    "serve:dev":
      "npx nodemon --watch 'app/**/*.ts' --ignore 'app/**/*.spec.ts' --exec ts-node app/server.ts",
    "serve:prod": "tsc -p app/api && node dist/server.js",
    "serve:swagger":
      "concurrently \"http-server ../ -a localhost -p 4041\" \"open http://localhost:4041/swagger\"",
    "test": "nodemon --ext ts --exec 'jasmine-ts \"app/**/*.spec.ts\"'"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.4.6",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "http-server": "^0.11.1",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "nodemon": "^1.17.1",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
